<h1>EDIT TASK</h1>

<form action="/tasks/:id" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for="title">Title: </label>
  <input type="text" name="task[title]" id="title">

  <label for="details">Details: </label>
  <input type="text" name="task[details]" id="details">

  <label for="details">Completed: </label>
  <input type="boolean" name="task[completed]" id="completed">

  <input type="submit">

</form>


